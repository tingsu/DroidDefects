<manifest 
      xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.rigid.birthdroid"
      android:versionCode="63"
      android:versionName="0.6.3">
        
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="19" />

    <!-- main application -->
    <application 
          android:label="@string/app_name" 
          android:icon="@drawable/icon">

        <!-- main activity -->
        <activity 
              android:name="BirthdroidActivity"
              android:label="@string/app_name"
			  android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- about activity -->
        <activity 
              android:name="AboutActivity"
			  android:label="@string/about_name"
			  android:theme="@style/Theme.AppCompat">
		<meta-data
		  android:name="android.support.PARENT_ACTIVITY"
		  android:value="com.rigid.birthdroid.BirthdroidActivity" />
	</activity>
              
        <!-- preferences activity -->
        <activity 
              android:name="PreferencesActivity" android:label="@string/preferences_name"
			  android:theme="@style/Theme.AppCompat">
		</activity>
        
        <!-- widget -->
        <receiver 
              android:name="BirthdroidWidget" 
              android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.rigid.birthdroid.CLICK" />
                <action android:name="com.rigid.birthdroid.PREFS_UPDATE" />
            </intent-filter>
            <meta-data 
                  android:name="android.appwidget.provider"
                  android:resource="@xml/widget_info" />
        </receiver>
            
        <!-- Service to perform widget updates -->
        <service android:name="BirthdroidWidget$BirthdroidService" />
    </application>
    
</manifest> 
